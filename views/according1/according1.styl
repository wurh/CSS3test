.accordingMenu
  font 12px Arial,Verdana,sans-serif
  margin 0 auto
  padding 10px
  width 500px
  h2
    margin 5px 0
    padding 0
    position relative
    &:before /** 制作三角形 **/
      border 5px solid #fff
      border-color #fff transparent transparent
      content ""
      height 0
      position absolute
      right 10px
      top 15px
      width 0
    a /**制作手风琴标题栏效果**/
      background #8f8f8f
      background -moz-linear-gradient(top,#cecece,#8f8f8f)
      background -webkit-gradient(linear,left top,left buttom,from(#cecece),to(#8f8f8f))
      background -o-linear-gradient(top,#cecece,#8f8f8f)
      background linear-gradient(top,#cecece,#8f8f8f)
      border-radius 5px
      color #424242
      display block
      font-size 13px
      font-weight normal
      margin 0
      padding 10px
      text-shadow 2px 2px 2px #aeaeae
      text-decoration none

.accordingMenu:target h2 a,.accordingMenu h2 a:focus,.accordingMenu h2 a:hover,.accordingMenu h2 a:active/**目标标题的效果**/
  background #2288dd
  background #2288dd
  background -moz-linear-gradient(top,#6bb2ff,#2288dd)
  background -webkit-gradient(linear,left top,left buttom,from(#6bb2ff),to(#2288dd))
  background -o-linear-gradient(top,#6bb2ff,#2288dd)
  background linear-gradient(top,#6bb2ff,#2288dd)
  color #FFF
.accordingMenu p
  margin 0
  height 0
  overflow hidden
  padding 0 10px
  padding 0 10px
  -moz-transition height 0.5s ease-in
  -webkit-transition height  0.5s ease-in
  -o-transition height 0.5s ease-in
  transition height 0.5s ease-in

/**这部分是显示内容的关键代码**/
.accordingMenu:target p
  height 100px
  overflow auto

.accordingMenu:target h2:before
  border-color  transparent transparent transparent #fff


